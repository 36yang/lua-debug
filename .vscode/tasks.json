{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "options": {
        "cwd": "${workspaceFolder}"
    },
    "tasks": [
        {
            "label": "Rebuild",
            "command": "luamake",
        },
        {
            "label": "Copy Extension",
            "command": "${workspaceFolder}/build/lua",
            "args": [
                "make/copy.lua",
                "extension",
                "${execPath}"
            ]
        },
        {
            "label": "Copy Publish",
            "command": "${workspaceFolder}/build/lua",
            "args": [
                "make/copy.lua",
                "publish",
                "${execPath}"
            ]
        }
    ]
}